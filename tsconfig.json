{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/js-cookie",
      "@types/jest",
      "vuetify",
      "nuxt-i18n"
    ]
  },
  "exclude": ["node_modules"]
}
